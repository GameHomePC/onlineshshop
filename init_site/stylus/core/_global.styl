.content {
    padding: 30px 0;

    .wrapper {
        clearfix();
    }
}

.container {
    width: 100%;
    box-sizing border-box;

    &--sidebar {
        float left;

        +breakpoint($media-768, 'max-width') {
            float none;
        }
    }

    &--right {
        margin-right: -270px;
        padding-right: 297px;

        +breakpoint($media-768, 'max-width') {
            margin-right: 0;
            padding-right: 0;
        }
    }

    &--left {
        margin-left: -270px;
        padding-left: 297px;

        +breakpoint($media-768, 'max-width') {
            margin-left: 0;
            padding-left: 0;
        }
    }
}

.sidebar {
    position relative;

    &--small {
        float left;
        width: 270px;

        +breakpoint($media-768, 'max-width') {
            float none
            width auto
        }
    }

}

