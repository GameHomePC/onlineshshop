.wrapper {
    max-width 1170px;
    padding: 0 10px;
    margin: 0 auto;
}

body {
    font-family: $NHaasGroteskDSStd-55Rg;
}

a {
    &:hover {
        text-decoration underline;
    }
}

.left { text-align: left; }
.center { text-align: center; }
.right { text-align: right; }

.window {

}

.content {
    padding: 30px 0;

    .wrapper {
        clearfix();
    }
}

.container {
    width: 100%;
    box-sizing border-box;

    &--sidebar {
        float left;
    }

    &--right {
        margin-right: -270px;
        padding-right: 297px;
    }

    &--left {
        margin-left: -270px;
        padding-left: 297px;
    }
}

.sidebar {
    position relative;

    &--small {
        float left;
        width: 270px;
    }

}

footer-item(397px, '.window', '.footer');

.verticatfix {
    verticatfix();
}

.warnH {
    padding: 5px 0;
    font-family $MyriadPro;
    border-radius: 5px;
}