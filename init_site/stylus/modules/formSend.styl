.formSend {
    padding: 11px 2px;

    form {

    }

    .fieldset {
        &__wrapSubmit {
            margin-top: 14px;
            text-align right;

            +breakpoint($media-1024, 'max-width') {
                text-align center;

                .btn {
                    width 100%
                }
            }
        }
    }

    .btn {
        display inline-block
        vertical-align top
        height 44px;
        font-size 16px;
        width: (100% / 1.5);
    }

    .input-text {
        height 35px;
        background transparent;
        width: 100%;
        color #fff;

        &:focus {
            border-color: #dadada;
        }
    }
}