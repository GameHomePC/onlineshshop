.cart {

    &__BoxButton {
        td {
            padding: 0 20px 25px;
        }

        .button1 {
            .btn {
                padding: 0 10px;
            }
        }

        .button2 {
            .btn {
                span {
                    padding: 0 55px;
                }
            }
        }
    }

    table {
        width: 100%;
    }

    .border {
        .bgH {
            td, th {
                font-family $Roboto;
                font-size 14px;
                line-height 32px;
                letter-spacing(20, 14);
                color: #b4bbc2;
                text-align left;
                padding: 0 20px;
            }
        }

        .bg {
            border-top: 1px solid #dee2e7;

            td {
                padding: 25px 20px;
                vertical-align top;
                font-family $Arial;
                font-size 16px;
                line-height 22px;
                letter-spacing(25, 16);
                color #1a1a1a;
                text-align left;
            }

            input[type="checkbox"] {
                margin: 0;
                height: 37px;
                width: 37px;
                border: 1px solid #000;
            }

            input[type="text"] {
                display inline-block;
                vertical-align top
                height 37px;
                border: 2px solid #dadada;
                border-radius: 3px;
                font-family $Roboto;
                font-size 13px;
                color #acacac;
                letter-spacing(25, 13);
                outline none;
                appearance: none;
                padding: 0 12px;
                transition all 0.2s ease;

                &:focus {
                    border-color #3da1da;
                    box-shadow 0 0 7px 1px rgba(61,161,218,1);
                }
            }
        }

        .bgHl {
            border-top: 1px solid #dee2e7;

            td {
                padding: 25px 20px 10px;
                font-family $Roboto;
                font-size 18px;
                font-weight bold;
                line-height 32px;
                letter-spacing(20, 18);
                color #000000;

                b {
                    color: #ee2727;
                }
            }

            .button {
                display inline-block;
                width 100%;
                outline none;
                height 41px;
                font-family $Arial;
                font-size 14px;
                text-align center;
                padding: 0;
                box-sizing border-box;
                transition all 0.2s ease;
                text-decoration none;
                border-radius 5px;
                background #5ca12c;
                color #fff;
                line-height 41px;
                padding-bottom: 3px;
                cursor pointer

                span {
                    display block;
                    border-radius 5px;
                    background #77c044;
                    height 100%;
                }

                &:hover {
                    opacity 0.8;
                    text-decoration none;
                }
            }
        }
    }
}